.swiper {
  position: relative;
  width: 100%;
  height: 430rpx;
}

.swiper-contain {
  width: 100%;
  height: 430rpx;
}

.swiper-bg {
  position: absolute;
  left: -25%;
  width: 150%;
  height: 300rpx;
  /* padding-top: 50px; *//* background-color: #39a9cf;39a9cf */
  background-image: linear-gradient(to top, #4093ff 0%, #0a60af 100%);
  border-radius: 0 0 50% 50%;
}

.swiper-item {
  margin: 20rpx auto 0;
  position: relative;
  height: 350rpx;
  width: 630rpx;
  /* padding-top: calc(100% * 9/ 16); */
  border-radius: 10px;
}

.swiper-image {
  position: absolute; /*因为容器所有子元素需要绝对定位*/
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  background: rgb(219, 219, 219);
  border-radius: 10px;
}

.swiper-image-tag {
  position: absolute; /*因为容器所有子元素需要绝对定位*/
  left: 0;
  bottom: 0;
  width: 100%;
  height: 25px;
  font-size: 16px;
  text-align: center;
  line-height: 1.5em;
  background: rgba(105, 105, 105, 0.432);
  border-radius: 0 0 10px 10px;
  /* overflow: hidden; */
}

.notice {
  margin-top: 50px;
  background: #fff;
  font-size: 16px;
  width: 100%;
  min-height: 100px;
  position: relative;
  /* border-top: rgb(214, 214, 214) solid 1px;
  border-bottom: rgb(214, 214, 214) solid 1px; *//* box-shadow: 0 2px 10px rgba(105, 105, 105, 0.137); *//* box-shadow: 0 -10px 20px rgba(8, 86, 230, 0.3)} */
}

.notice-top-shadow {
  width: 100%;
  margin: auto auto;
  position: absolute;
  height: 20px;
  box-shadow: 0 -5px 20px rgba(0, 76, 218, 0.1);
  z-index: -1;
}

.notice-logo-shadow {
  box-shadow: 0 -5px 20px rgba(0, 76, 218, 0.1);
  z-index: -1;
}

.notice-logo {
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  border-radius: 50%;
  /* box-shadow: 0 5px 15px rgba(8, 86, 230, 0.144); */
  left: 300rpx;
  top: -70rpx;
}

.notice-title {
  position: relative;
  color: #0a60af;
  font-size: 18px;
  font-weight: 600;
  letter-spacing: 2px;
  height: 75rpx;
}

.notice-title-left {
  position: absolute;
  left: 15px;
  top: 10px;
}

.notice-title-right {
  position: absolute;
  right: 15px;
  top: 10px;
  font-weight: 600;
}

.notice-swiper {
  height: 280rpx;
  /* background: #aaa; */
  margin-top: 10px;
}

.notice-swiper-item {
  display: flex;
  margin: 0 50rpx;
  /* padding: 0 20rpx 0 20rpx; */
  justify-content: left;
  flex-direction: row;
  align-items: center;

  color: #595959;
}

.notice-prepic {
  /* flex: 1; */
  width: 200rpx;
  height: 200rpx;
  background: #f7f7f7;
  margin-right: 50rpx;
  border-radius: 10px;
}

.notice-precon {
  /* flex: 2; */
  width: 400rpx;
  height: 200rpx;
  margin-right: 50rpx;
}

.notice-news-title {
  position: relative;
  min-height: 50rpx;
  /* background: #bbb; */
  line-height: 50rpx;
  font-size: 16px;
  font-weight: bold;
  letter-spacing: 2px;
  white-space: pre-wrap;
}

.notice-news-content {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: pre-wrap;
  position: relative;
  margin-top: 20rpx;
  max-height: 130rpx;
  /* background: #bbb; */
  /* word-break:break-word; */
  font-size: 14px;
  letter-spacing: 1px;
  line-break: normal;
  text-align:justify;
  line-height: 40rpx;
}

.tool {
  margin-top: 20px;
  width: 100%;
  /* display: flex; */
  background: #fff;
  min-height: 50px;
}

.tool-title {
  padding: 20px 0px 20px 20px;
  color: #0a60af ;
  font-size: 22px;
  font-weight: 700;
  letter-spacing: 2px;
  
  /* text-align: center; */
}

.tool-mpic {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  filter: brightness(50%);
}

.tool-list {
  /* box-sizing: content-box; *//* width: 100%; */
  padding: 0 3%;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.tool-list-item {
  position: relative;
  display: flex;
  /* flex-direction: row; */
  justify-content: center;
  align-items: center;
  overflow: hidden;
  width: 300rpx;
  height: 150rpx;
  margin-bottom: 30px;
  background-image: linear-gradient(135deg, #00c6fb 0%, #005bea 100%);
  border-radius: 8px;
  box-shadow: 0px 3px 10px rgba(0, 0, 0, 0.3);
}

.tool-list-item-title {
  position: relative;
  /* width: 1em; */
  text-align: center;
  /* writing-mode: lr-tb; */
  /* margin: auto; */
  letter-spacing: 15rpx;
  word-wrap: break-word;
  font-size: 36rpx;
  color: #fff;
  font-weight: 600;
  z-index: 99;
}

.detail {
  margin-top: 20px;
  width: 100%;
  /* display: flex; */
  background: #fff;
  min-height: 50px;
}

.detail-list{
  box-sizing: border-box;
  padding: 0px 20rpx;
  width: 100%;
  /* background: gray; */
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.detail-list-item{
  /* background: gray; */
  text-align: center;
  width:200rpx;
  height:200rpx;
  margin-bottom: 10px;
  display: flex;
  align-items:center;
  justify-content:center;
  flex-direction: column;
}

.detail-list-item-pic{
  border-radius: 50%;
  background: #f7f7f7;
  width: 120rpx;
  height:120rpx;
  margin-bottom: 8px;
}

.detail-list-item-title{
  color: #0a60af;
  font-size: 14px;
  letter-spacing: 2px;
  font-weight: bold;
  white-space:nowrap;
}

.picture {
  margin-top: 20px;
  width: 100%;
}

.qrcode{
  margin-top: 20px;
}

.footer {
  margin: 20px 0 10px 0;
  width: 100%;
  text-align: center;
  font-size: 14px;
  color: rgb(168, 168, 168);
}
