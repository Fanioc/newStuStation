/* pages/jinshuju/dormitory/index.wxss */

.view-box {
  width: 100%;
  height: 100%;
  position: absolute;
}

.shadow {
  box-shadow: 0 3px 15px rgba(0, 0, 0, 0.051);
}

.title {
  box-sizing: border-box;
  height: 30%;
  position: relative;
  text-align: center;
  font-size: 80rpx;
  color: #0a60af;
  font-weight: bold;
  padding-top: 20%;
  /* letter-spacing: 50px; */
}

.search {
  height: 10%;
}

.search-bar {
  color: #c1c1c1;
  height: 50px;
  border-radius: 5px;
  width: 90%;
  background: #fff;
  margin: auto;
  align-items: center;
  line-height: 50px;
  font-weight: 400;
}

.search-icon {
  /* display: inline; */
  position: absolute;
  padding-left: 15px;
  width: 40px;
}

.search-text {
  /* display: inline; *//* width: 60%; */
  color: #999;
  position: absolute;
  height: 50px;
  left: 65px;
}


.search-sub {
  position: absolute;
  /* padding-left: 15px; */
  right: 15px;
  width: 60px;
}

.search-icons{
  position: relative;
  text-align: center;
  width: 60px;
  right: 0;
}

.result {
  height: 60%;
  transition: opacity 2s;
}

.result-title {
  line-height: 50px;
  box-sizing: border-box;
  height: 50px;
  /* padding-top: 20px; */
  color: #999;
  font-size: 16px;
  letter-spacing: 1px;
  /* margin: auto; */
  text-align: center;
  /* margin-top */
}

.result-view {
  height: 70%;
  width: 90%;
  margin: auto;
  /* background: #fff; */
  border-radius: 5px;
}

.table {
  border: 1px solid #dadada;
  border-right: 0;
  border-bottom: 0;
  width: 90%;
  /* margin: auto; */
  color: #333;
  font-size: 14px;
  margin: auto;
  margin-top: 10px;
  margin-bottom: 20px;
  background-color: #fafafa;
}

.tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.th, .td {
  padding: 10px 0px 10px 15px;
  border-bottom: 1px solid #d9d9d9;
  border-right: 1px solid #d9d9d9;
  background: #fff;
  text-align: left;
  width: 100%;
}

.th {
  width: 70%;
  font-weight: 400;
}
