/**app.wxss**/
@import "/font/FontAwesome.wxss";

page{
  background-color: #f7f7f7;
}


.container {
  width: 100%;
}

.card-blue {
  /* background-image: linear-gradient(to top, #4481eb 0%, #04befe 100%); */
  /* background: #5cb6d5; */
  box-shadow: 0px 6px 20px rgba(8, 86, 230, 0.2);
  color: white;
}

.float-centert-a {
  float: left;
  left: 50%;
  position: absolute;
}

.float-centert-b {
  position: relative;
  float: right;
  right: 50%;
}


.view-box {
  width: 100%;
  height: 100%;
  position: absolute;
}

.flex-all{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.flex-x{
  display: flex;
  flex-direction:row;
}

.flex-y{
  display: flex;
  flex-direction:column;
}

.shadow{
	box-shadow: 0 2px 8px 0 rgba(0, 0, 0, 0.1), 0 0px 10px 0 rgba(0, 0, 0, 0.10);
}
